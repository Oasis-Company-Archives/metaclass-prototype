{
  "$id": "https://example.org/metaverse/schema/metaschema.v0.1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Metaverse Metaclass MetaSchema v0.1",
  "type": "object",
  "required": ["$id", "$schema", "title", "type", "properties", "required"],
  "properties": {
    "$id": { "type": "string", "format": "uri" },
    "$schema": { "type": "string", "format": "uri" },
    "title": { "type": "string" },
    "description": { "type": "string" },

    "type": { "const": "object" },

    "required": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },

    "properties": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": { "type": "object" }
    },

    "additionalProperties": { "type": "boolean" },

    "allOf": { "type": "array" },
    "$defs": { "type": "object" }
  },
  "additionalProperties": true
}

